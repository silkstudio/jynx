{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "baseUrl": "/",
      "declaration": true,
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src", "*.config.js", "test"],
    "exclude": ["node_modules"]
  }