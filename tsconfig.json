{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
  }