{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "baseUrl": "./",
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src", "rollup.config.js"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "docs"]
  }