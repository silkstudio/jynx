{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "baseUrl": "/",
    "declaration": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src", "rollup.config.js", "@types"],
  "exclude": ["node_modules", "docs"]
}
